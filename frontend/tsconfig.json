{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["element-plus/global"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
    "@/*": ["src/*"]
    }

  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/mock/index.ts", "src/store/theme.js", "src/store/sidebar.js", "src/store/map.js", "src/router/index.js", "src/main.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
